  <%= render 'shared/errors', obj: @post %>

<div class='well'>
<%= form_for @post do |f|%>
	<%=f.label :title %>
	<%=f.text_field :title %>
	<%=f.label :url %>
	<%=f.text_area :url %>
	<%=f.label :description %>
	<%=f.text_area :description %>
	<br>
	<%= f.submit (@post.new_record? ? 'Create Post' : 'Update Post'),  class: 'btn btn-primary' %>
<% end %>
</div>